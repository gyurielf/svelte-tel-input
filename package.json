{
	"name": "svelte-tel-input",
	"description": "svelte-tel-input",
	"version": "3.0.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gyurielf/svelte-tel-input.git"
	},
	"homepage": "https://github.com/gyurielf/svelte-tel-input#readme",
	"keywords": [
		"svelte",
		"tel input",
		"phone",
		"phone input",
		"intl",
		"intl tel input"
	],
	"engines": {
		"npm": ">= 8",
		"yarn": ">=2",
		"node": ">= 16",
		"pnpm": ">= 7"
	},
	"scripts": {
		"build": "vite build",
		"changeset:version": "changeset version && npm i --lockfile-only",
		"dev": "vite dev",
		"eslint": "eslint --ext .js,.ts,.svelte .",
		"eslint:fix": "eslint --fix",
		"generate:exports": "bash ./src/lib/exportGen.sh",
		"lint": "npm run prettier:check && npm run eslint && npm run ts && npm run svelte-check",
		"lint:fix": "npm run eslint:fix && npm run prettier:fix",
		"package": "node ./zarf/scripts/pre-build.js && svelte-kit sync && svelte-package && node ./zarf/scripts/post-build.js",
		"prettier": "prettier",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"prettier:fix": "prettier --write --plugin-search-dir=. .",
		"prepare:husky": "husky install",
		"preview": "vite preview",
		"release": "npx changeset publish",
		"release:package": "cd package && npm publish",
		"svelte-check": "svelte-kit sync && svelte-check --ignore 'dist,build,coverage,.svelte-kit,package' --fail-on-warnings",
		"test": "playwright test",
		"test:unit": "vitest",
		"ts": "tsc --noEmit",
		"sync": "svelte-kit sync"
	},
	"dependencies": {
		"libphonenumber-js": "^1.10.34",
		"svelte": "^3.58.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.1",
		"@changesets/get-github-info": "^0.5.2",
		"@changesets/types": "^5.2.1",
		"@macfja/svelte-persistent-store": "^2.3.0",
		"@playwright/test": "^1.34.3",
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.20.2",
		"@sveltejs/package": "^1.0.2",
		"@testing-library/svelte": "^3.2.2",
		"@testing-library/user-event": "^14.4.3",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.9",
		"autoprefixer": "^10.4.14",
		"cssnano": "^6.0.1",
		"dotenv": "^16.1.4",
		"edit-package-json": "^0.8.14",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"jsdom": "^22.1.0",
		"micromatch": "^4.0.5",
		"postcss": "^8.4.24",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"schema-dts": "^1.1.2",
		"svelte-check": "^3.4.3",
		"svelte2tsx": "^0.6.15",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.5.3",
		"typescript": "^5.0.4",
		"vite": "^4.3.9",
		"vitest": "^0.32.0"
	},
	"type": "module",
	"license": "MIT",
	"types": "./src/lib/types/index.d.ts",
	"exports": {
		".": "./src/lib/index.ts",
		"./styles/*": "./src/lib/styles/flags.css",
		"./types/*": "./src/lib/types/*"
	}
}
