		"lint:fix": "npm run eslint:fix && npm run prettier:fix",
		"package": "svelte-kit package",
		"prettier": "prettier",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"prettier:fix": "prettier --write --plugin-search-dir=. .",
		"prepare:husky": "husky install",
		"preview": "vite preview",
		"release": "npx changeset publish",
		"release:package": "cd package && npm publish",
		"svelte-check": "svelte-check --use-new-transformation --ignore 'dist,build,coverage,.svelte-kit,package' --threshold warning --fail-on-warnings",
		"test": "jest",
		"test:watch": "jest --watch",
		"ts": "tsc --noEmit"
	},
