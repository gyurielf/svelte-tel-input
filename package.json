{
	"name": "svelte-tel-input",
	"description": "svelte-tel-input",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gyurielf/svelte-tel-input.git"
	},
	"homepage": "https://github.com/gyurielf/svelte-tel-input#readme",
	"keywords": [
		"svelte",
		"tel input",
		"phone",
		"phone input",
		"intl",
		"intl tel input"
	],
	"engines": {
		"npm": ">= 7",
		"yarn": ">=2",
		"node": ">= 16"
	},
	"scripts": {
		"build": "vite build",
		"changeset:version": "changeset version && npm i --lockfile-only",
		"dev": "vite dev",
		"eslint": "eslint --ext .js,.ts,.svelte .",
		"eslint:fix": "eslint --fix",
		"generate:exports": "bash ./src/lib/exportGen.sh",
		"lint": "npm run prettier:check && npm run eslint && npm run ts && npm run svelte-check",
		"lint:fix": "npm run eslint:fix && npm run prettier:fix",
		"package": "node ./zarf/scripts/pre-build.js && svelte-kit sync && svelte-package && node ./zarf/scripts/post-build.js",
		"prettier": "prettier",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"prettier:fix": "prettier --write --plugin-search-dir=. .",
		"prepare:husky": "husky install",
		"preview": "vite preview",
		"release": "npx changeset publish",
		"release:package": "cd package && npm publish",
		"svelte-check": "svelte-kit sync && svelte-check --ignore 'dist,build,coverage,.svelte-kit,package' --fail-on-warnings",
		"test": "jest",
		"test:watch": "jest --watch",
		"ts": "tsc --noEmit"
	},
	"dependencies": {
		"libphonenumber-js": "^1.10.16",
		"svelte": "^3.55.0"
	},
	"devDependencies": {
		"@babel/core": "^7.20.12",
		"@babel/preset-env": "^7.20.2",
		"@changesets/cli": "^2.26.0",
		"@changesets/get-github-info": "^0.5.2",
		"@changesets/types": "^5.2.1",
		"@macfja/svelte-persistent-store": "^2.2.1",
		"@sveltejs/adapter-static": "^1.0.1",
		"@sveltejs/kit": "^1.0.7",
		"@sveltejs/package": "^1.0.2",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.2",
		"@types/jest": "^29.2.5",
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.0",
		"autoprefixer": "^10.4.13",
		"babel-jest": "^29.3.1",
		"babel-loader": "^9.1.2",
		"cssnano": "^5.1.14",
		"dotenv": "^16.0.3",
		"edit-package-json": "^0.8.7",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"jest": "^29.3.1",
		"jest-matchmedia-mock": "^1.1.0",
		"micromatch": "^4.0.5",
		"postcss": "^8.4.21",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.1",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte-check": "^3.0.1",
		"svelte-inview": "^3.0.2",
		"svelte-jester": "^2.3.2",
		"svelte-loader": "^3.1.4",
		"svelte-preprocess": "^5.0.0",
		"svelte2tsx": "^0.6.0",
		"tailwindcss": "^3.2.4",
		"ts-jest": "^29.0.3",
		"tsconfig-paths-webpack-plugin": "^4.0.0",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.4"
	},
	"type": "module",
	"license": "MIT",
	"types": "./src/lib/types/index.d.ts",
	"exports": {
		".": "./src/lib/index.ts",
		"./styles/*": "./src/lib/styles/*",
		"./types/*": "./src/lib/types/*"
	}
}
