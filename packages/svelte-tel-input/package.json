{
	"name": "svelte-tel-input",
	"description": "svelte-tel-input",
	"version": "3.5.2",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gyurielf/svelte-tel-input.git"
	},
	"homepage": "https://github.com/gyurielf/svelte-tel-input#readme",
	"keywords": [
		"svelte",
		"svelte kit",
		"sveltekit",
		"tel input",
		"phone",
		"phone input",
		"svelte phone input",
		"svelte tel input",
		"intl",
		"intl tel input",
		"svelte intl tel input"
	],
	"engines": {
		"npm": ">= 8",
		"yarn": ">= 1",
		"node": ">= 18",
		"pnpm": ">= 8"
	},
	"scripts": {
		"check:publint": "publint . --strict",
		"convert": "node ./scripts/convertExamples.js",
		"package:watch": "svelte-kit sync && svelte-package --watch",
		"package": "svelte-kit sync && pnpm run convert && svelte-package && pnpm run check:publint",
		"svelte-check": "svelte-kit sync && svelte-check --ignore 'dist,build,coverage,.svelte-kit,package' --fail-on-warnings --no-tsconfig",
		"sync": "svelte-kit sync",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"ts": "tsc --noEmit"
	},
	"peerDependencies": {
		"svelte": "^4.0.0 || ^5.0.0"
	},
	"dependencies": {
		"libphonenumber-js": "1.10.43"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "4.0.0",
		"@sveltejs/kit": "^2.17.1",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@testing-library/jest-dom": "6.6.3",
		"@testing-library/svelte": "^5.2.6",
		"@testing-library/user-event": "^14.6.1",
		"@types/micromatch": "^4.0.9",
		"autoprefixer": "^10.4.20",
		"cssnano": "^7.0.6",
		"dotenv": "^16.4.7",
		"jsdom": "^26.0.0",
		"micromatch": "^4.0.8",
		"postcss": "^8.5.1",
		"publint": "^0.3.4",
		"svelte": "^5.19.9",
		"svelte-check": "^4.1.4",
		"svelte2tsx": "^0.7.34",
		"tailwindcss": "^3.4.17",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"vite": "^6.1.0",
		"vitest": "^3.0.5"
	},
	"type": "module",
	"license": "MIT",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"svelte": "./dist/index.js",
	"typesVersions": {
		"*": {
			"types": [
				"./dist/types/index.d.ts"
			],
			"utils": [
				"./dist/utils/index.d.ts"
			],
			"assets": [
				"./dist/assets/index.d.ts"
			]
		}
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"default": "./dist/types/index.d.ts"
		},
		"./utils": {
			"types": "./dist/utils/index.d.ts",
			"default": "./dist/utils/index.js"
		},
		"./assets": {
			"types": "./dist/assets/index.d.ts",
			"default": "./dist/assets/index.js"
		},
		"./styles/flags.css": "./dist/styles/flags.css"
	}
}
